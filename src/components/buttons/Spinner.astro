<div class='spinner float-right mt-1'></div>

<style>
    .spinner {
        border: 4px solid #f3f3f3; /* Light grey */
        @apply border-t-frog-400;
        border-radius: 50%;
        width: 20px;
        height: 20px;
        animation: spin 2s linear infinite;
    }

    @keyframes spin {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    }
</style>
