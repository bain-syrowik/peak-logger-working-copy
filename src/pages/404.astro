---
import LandingPage from '../layouts/LandingPage.astro';
---

<LandingPage title='Peak Logger'>
    <div class='content'>
        <h2>Page not found!</h2>

        <br />

        <p>
            {
                Astro.request.headers.has('Referer') && (
                    <span>
                        Page {Astro.request.headers.get('Referer')} does not
                        exist!
                    </span>
                )
            }
        </p>

        <br />

        <p>The page you requested cannot be found.</p>

        <br />

        <p>
            Go to the <a href='/'>Homepage</a>.
        </p>
    </div>
</LandingPage>
